<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradiente_plano_de_fundo"
    android:id="@+id/tela_peso"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_registrar_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="Peso"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBranco"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_registrar_valor_peso"
        app:layout_constraintRight_toRightOf="@+id/text_registrar_valor_peso"
        app:layout_constraintTop_toBottomOf="@+id/text_registrar_valor_peso" />

    <EditText
        android:id="@+id/text_registrar_valor_peso"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="85,7"
        android:backgroundTint="@android:color/white"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textColorHint="@color/colorBranco"
        android:textSize="70sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="343dp"
        android:layout_height="222dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBranco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_atualizar_peso"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/btn_atualizar_peso"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/borda_curvada_verde"
        android:text="ATUALIZAR"
        android:textColor="@color/colorBranco"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_registrar_peso" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bargraph_peso"
        android:textColor="@color/colorBranco"
        android:layout_width="343dp"
        android:layout_height="222dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_atualizar_peso"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"></com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:text="CircunferÃªncia Abdominal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBranco"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_registrar_valor_circunferencia"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/text_registrar_valor_circunferencia"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="0,70 cm"
        android:backgroundTint="@android:color/white"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textColorHint="@color/colorBranco"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_registrar_valor_peso"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Junho, 14, 2018"
        android:textColor="@color/colorBranco"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="kg"
        android:textColor="@color/colorBranco"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_registrar_valor_peso"
        app:layout_constraintLeft_toRightOf="@+id/text_registrar_valor_peso"
        app:layout_constraintTop_toTopOf="@+id/text_registrar_valor_peso"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/ic_mais_cinza"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_mais_cinza" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Nova Meta"
        android:textColor="#bdc3c7"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintRight_toLeftOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />


</android.support.constraint.ConstraintLayout>