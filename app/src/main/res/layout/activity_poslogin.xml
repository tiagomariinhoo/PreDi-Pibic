<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradiente_plano_de_fundo"
    android:id="@+id/tela_pos_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.example.wagner.meupredi.View.Account.PosLogin"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/text_bem_vindo_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Seja Bem-Vindo!"
        android:textColor="@color/colorBranco"
        android:textSize="30dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/mensagem_pos_login"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/activity_pos_login"
        android:textColor="@color/colorBranco"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_usuario_poslogin"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_peso_poslogin"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Ex.: 85.7 kg"
        android:textSize="14dp"
        android:textAlignment="center"
        android:background="@drawable/borda_curvada_branca"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/edit_circunferencia_poslogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_peso_poslogin" />

    <TextView
        android:id="@+id/text_circunferencia_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circunferência abdominal"
        android:textColor="@color/colorBranco"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_peso_poslogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_circunferencia_poslogin"
        android:ems="10"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/borda_curvada_branca"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:hint="Ex.: 0.70 cm"
        android:textSize="14dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/text_circunferencia_poslogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_nome_usuario_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sr Fulano"
        android:textColor="@color/colorBranco"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_bem_vindo_poslogin"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_concluir_poslogin"
        android:layout_width="344dp"
        android:layout_height="50dp"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/borda_curvada_verde"
        android:drawableRight="@mipmap/ic_seta_direita_branca"
        android:gravity="center_vertical"
        android:text="         PRÓXIMO"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_peso_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Peso"
        android:textColor="@color/colorBranco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/mensagem_pos_login" />
    <TextView
        android:id="@+id/text_altura_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:textColor="@color/colorBranco"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_circunferencia_poslogin"
        app:layout_constraintHorizontal_bias="0.501" />

    <EditText
        android:id="@+id/edit_altura_poslogin"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/borda_curvada_branca"
        android:ems="10"
        android:hint="Ex.: 1.80 m"
        android:textSize="14dp"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/edit_peso_poslogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_altura_poslogin" />


</android.support.constraint.ConstraintLayout>