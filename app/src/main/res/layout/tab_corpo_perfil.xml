        android:id="@+id/text_tab_corpo_peso_atual"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/borda_retangular_sombra_vermelha"
        android:gravity="center_vertical"
        android:text="00,00"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="kg"
        android:textColor="@color/colorBranco"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="@+id/text_tab_corpo_peso_atual"
        app:layout_constraintRight_toRightOf="@+id/text_tab_corpo_peso_atual"
        app:layout_constraintTop_toTopOf="@+id/text_tab_corpo_peso_atual" />

    <TextView
        android:id="@+id/text_tab_corpo_peso_ultima_medicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Ultima medicao"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/text_tab_corpo_peso_atual"
        app:layout_constraintTop_toTopOf="@+id/text_tab_corpo_atualizar_peso" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@mipmap/ic_update_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_update_data" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/borda_retangular_sombra"
        android:text="Circunferência"
        android:paddingRight="8dp"
        android:textColor="@color/colorBackground"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView55"
