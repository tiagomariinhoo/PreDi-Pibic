<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_branco">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/borda_retangular_sombra"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tab_corpo_peso_atual" />

    <TextView
        android:id="@+id/text_tab_corpo_atualizar_peso"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/borda_retangular_sombra"
        android:text="Atualize seu peso"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/colorBackground"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text_tab_corpo_peso_atual"
        app:layout_constraintRight_toRightOf="parent" />

