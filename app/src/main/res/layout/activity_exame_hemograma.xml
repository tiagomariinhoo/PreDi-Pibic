<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_plano_de_fundo">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="ATUALIZE ABAIXO SUAS TAXAS"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Local do Exame"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorBranco"
        android:textSize="14dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editText3"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editText3"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="DATA: dd/mm/aaaa"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorBranco"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@+id/image_exame_hemograma"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/image_exame_hemograma"
        android:layout_marginRight="145dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/image_exame_hemograma"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_prancheta"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />


    <TextView
        android:id="@+id/text_fundo_branco_hemograma"
        android:layout_width="0dp"
        android:layout_height="370dp"
        android:background="@drawable/gradiente_branco"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/image_exame_hemograma" />

    <EditText
        android:id="@+id/edit_data_exame_hemograma"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="DATA: dd/mm/aaaa"
        android:textColorHint="@color/colorBranco"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_exame_hemograma"
        app:layout_constraintRight_toLeftOf="@+id/image_exame_hemograma"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="637dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/edit_local_exame_hemograma"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Local do Exame"
        android:textColorHint="@color/colorBranco"
        android:textSize="14dp"
        app:layout_constraintRight_toLeftOf="@+id/image_exame_hemograma"
        app:layout_constraintTop_toBottomOf="@+id/edit_data_exame_hemograma"
        app:layout_constraintLeft_toLeftOf="@+id/edit_data_exame_hemograma"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/text_hemograma_exame"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/borda_curvada_branca"
        android:gravity="center_vertical"
        android:text="HEMOGLOBINA GLICADA"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBackground"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_exame_hemograma"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_atualizar_exame_hemograma"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/borda_curvada_verde"
        android:text="atualizar"
        android:textColor="@color/colorBranco"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView25" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ATUALIZE ABAIXO SUAS TAXAS"
        android:textColor="@color/colorBranco"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/image_exame_hemograma"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edit_local_exame_hemograma"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_local_exame_hemograma"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />



        <ScrollView
            android:id="@+id/scrollView25"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_hemograma_exame">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/relativeLayout2">

                    <EditText
                        android:id="@+id/edit_hemoglobina_exame_hemograma"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        android:ems="10"
                        android:textSize="18dp"
                        android:inputType="textPersonName"
                        android:hint="Taxa de Hemoglobina"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/edit_hematocrito_exame_hemograma"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:textSize="18dp"
                        android:inputType="textPersonName"
                        android:hint="Taxa de Hematocrito"
                        android:textAlignment="center"
                        android:layout_below="@+id/edit_hemoglobina_exame_hemograma"
                        />

                    <EditText
                        android:id="@+id/edit_vgm_exame_hemograma"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:textSize="18dp"
                        android:inputType="textPersonName"
                        android:hint="Taxa de Vgm"
                        android:textAlignment="center"
                        android:layout_below="@+id/edit_hematocrito_exame_hemograma"/>

                    <EditText
                        android:id="@+id/edit_chcm_exame_hemograma"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:textSize="18dp"
                        android:hint="Taxa de Chcm"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:layout_below="@+id/edit_vgm_exame_hemograma"/>

                    <EditText
                        android:id="@+id/edit_rwd_exame_hemograma"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:textSize="18dp"
                        android:hint="Taxa de rwd"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:layout_below="@+id/edit_chcm_exame_hemograma"/>

                </RelativeLayout>

        </ScrollView>


</android.support.constraint.ConstraintLayout>
